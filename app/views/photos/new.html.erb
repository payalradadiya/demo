<section id="signin" class="full-height cl-pd-tp-60 ng-scope">
  <div>
    <%= form_for @photo, html: { multipart: true} do |f| %>
      <div class="register-box">
        <div class="register-box-body">
          <h1 class="text-center">Upload new image</h1>
          <%= content_tag(:div, flash[:error], :id => "flash_error", :class => "alert alert-danger") if flash[:error] %>
          <%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "alert alert-info") if flash[:notice] %>
          <%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "alert alert-warning") if flash[:alert] %>
      
            <p class="login-box-msg"><!-- Login Now.. --></p>
	           <% if @photo.errors.any? %>
	             <div id="error_explanation">
		            <h2>
			           <%= "#{pluralize(@photo.errors.count, "error")} prohibited this photo from being saved:" %>
		            </h2>
		            <ul>
			           <% @photo.errors.full_messages.each do |msg| %>	
                  <li>
			  	          <%= msg %>
                  </li>
                 <% end %>
		            </ul>
	             </div>
             <% end %>
          
             <div class="form-group has-feedback">
              <div class="field">
                 <%= f.text_field :title, autofocus: true, placeholder: "Title", :class => "form-control border-radius-none" %>
              </div>
             </div>

             <div class="form-group has-feedback">
              <div class="field">
                 <%= f.file_field :image %>
              </div>
             </div>

             <div class="row">
              <div class="col-md-12 col-md-4">
  	           <%= f.submit "Upload Photo", class: "btn btn-success btn-b btn-flat" %>
              </div>
             </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
        

           
              