<section id="register" class="full-height cl-pd-tp-60 robot-font">
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="register-box">
              <div class="register-box-body">
              <h2 class="text-center">Edit User</h2>
                <%= content_tag(:div, flash[:error], :id => "flash_error", :class => "alert alert-danger") if flash[:error] %>
                <%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "alert alert-info") if flash[:notice] %>
                <%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "alert alert-warning") if flash[:alert] %>

                  <p class="login-box-msg"><!-- Login Now.. --></p>
                  <%= devise_error_messages! %>
                  <div class="form-group has-feedback">
                    <div class="field">
                      <%= f.email_field :email, autofocus: true, :class => "form-control border-radius-none" %>
                      </div>
                  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<div class="form-group has-feedback">
  <div class="field">
   <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", :class => "form-control border-radius-none" %>
    
    </div>
    </div>


    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>



<div class="form-group has-feedback">
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", :class => "form-control border-radius-none" %>
    
    </div>
  </div>

<div class="form-group has-feedback">
  <div class="field">
   <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", :class => "form-control border-radius-none" %>
    
    </div>
  </div>

  <div class="col-xs-12 col-sm-4">
    <%= f.submit "Update", :class => "btn btn-success btn-block btn-flat" %>
  </div>
<% end %>

<br>  
<h2 class="text-center">Cancel my account</h2>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
</div>
</section>

