<section id="register" class="full-height cl-pd-tp-60 robot-font">
	<div>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<div class="register-box">
            	<div class="register-box-body">
        			<h2 class="text-center">Forget your password?</h2>
        				<%= content_tag(:div, flash[:error], :id => "flash_error", :class => "alert alert-danger") if flash[:error] %>
        				<%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "alert alert-info") if flash[:notice] %>
        				<%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "alert alert-warning") if flash[:alert] %>

        					<p class="login-box-msg"><!-- Login Now.. --></p>
  								<%= devise_error_messages! %>
                                <div class="form-group has-feedback">
  								<div class="field">
    								<%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "form-control border-radius-none" %>
              							<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  								</div>
  								</div>

  								<div class="col-xs-12 col-md-12">
    								<%= f.submit "Send me reset password instructions", :class => "btn btn-success btn-block btn-flat" %>
  								</div>
  								<br>
  								<br>
		<%= render "devise/shared/links" %>
		<!-- /.form-box -->
        </div>
        <!-- /.register-box -->
      </div>
    <% end %>
  </div>
</section>
